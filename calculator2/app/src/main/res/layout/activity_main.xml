<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/tvSolution"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons_layout"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="84dp"
        android:textAlignment="textEnd"
        android:textColor="@color/black"
        android:textSize="65dp" />

    <TextView
        android:id="@+id/tvResult"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/buttons_layout"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="250dp"
        android:layout_marginEnd="15dp"
        android:layout_marginBottom="0dp"
        android:text="0"
        android:textAlignment="viewEnd"
        android:textColor="@color/black"
        android:textSize="65dp" />

    <Button
        android:id="@+id/btn_history"
        android:layout_width="wrap_content"
        android:layout_height="60dp"
        android:layout_above="@+id/buttons_layout"
        android:layout_marginStart="20dp"
        android:layout_marginBottom="15dp"
        android:backgroundTint="#E37979"
        android:text="HISTORY"
        android:textColor="@color/white"
        app:layout_constraintVertical_bias="1.0" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/buttons_layout"
        android:layout_alignParentBottom="true"
        android:backgroundTint="#DCD5D5"
        android:paddingVertical="10dp"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginStart="10px"
            android:layout_marginTop="10px"
            android:layout_marginEnd="10px"
            android:layout_marginBottom="10px"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button_open_bracket"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"

                android:text="("
                android:textColor="@color/white"
                android:backgroundTint="#FF2196F3"
                android:textSize="30dp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/button_close_bracket"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text=")"
                android:textColor="@color/white"
                android:backgroundTint="#2196F3"
                android:textSize="30dp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/button_ce"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="101dp"
                android:layout_height="wrap_content"
                android:layout_margin="7dp"
                android:text="CE"
                android:textColor="@color/white"
                android:backgroundTint="#F3DC18"
                android:textSize="30dp"
                app:cornerRadius="50dp"


                />

            <Button
                android:id="@+id/button_AC"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="102dp"
                android:layout_height="72dp"
                android:layout_margin="7dp"
                android:layout_marginStart="20dp"
                android:layout_marginTop="20dp"
                android:layout_marginEnd="20dp"
                android:layout_marginBottom="20dp"


                android:text="AC"
                android:textColor="@color/white"
                android:backgroundTint="#DC3C3C"
                android:textSize="30dp"
                app:cornerRadius="50dp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginStart="10px"
            android:layout_marginTop="10px"
            android:layout_marginEnd="10px"
            android:layout_marginBottom="10px"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button_7"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="7"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/button_8"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="8"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/button_9"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="9"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/button_plus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:backgroundTint="#46C84B"
                android:text="+"
                android:textColor="@color/white"
                android:textSize="40dp"
                app:cornerRadius="50dp" />


        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginStart="10px"
            android:layout_marginTop="10px"
            android:layout_marginEnd="10px"
            android:layout_marginBottom="10px"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button_4"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="4"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/button_5"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="5"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:cornerRadius="50dp" />
            <Button
                android:id="@+id/button_6"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="6"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:cornerRadius="50dp" />
            <Button
                android:id="@+id/button_minus"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="-"
                android:textColor="@color/white"
                android:backgroundTint="#46C84B"
                android:textSize="40dp"
                app:cornerRadius="50dp"
                />





        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginStart="10px"
            android:layout_marginTop="10px"
            android:layout_marginEnd="10px"
            android:layout_marginBottom="10px"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button_1"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="1"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/button_2"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="2"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:cornerRadius="50dp" />
            <Button
                android:id="@+id/button_3"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="3"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:cornerRadius="50dp" />
            <Button
                android:id="@+id/button_mutiply"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="*"
                android:textColor="@color/white"
                android:backgroundTint="#46C84B"
                android:textSize="30dp"
                app:cornerRadius="50dp"
                />





        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="75dp"
            android:layout_marginStart="10px"
            android:layout_marginTop="10px"
            android:layout_marginEnd="10px"
            android:layout_marginBottom="10px"
            android:gravity="center"
            android:orientation="horizontal">


            <Button
                android:id="@+id/button_0"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="0"
                android:textColor="@color/white"
                android:textSize="30dp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/button_dot"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="."
                android:textColor="@color/white"
                android:textSize="30dp"
                app:cornerRadius="50dp" />

            <Button
                android:id="@+id/button_equal"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:backgroundTint="#E37979"
                android:text="="
                android:textColor="#EDE7E7"
                android:textSize="40dp"
                app:cornerRadius="50dp" />
            <Button
                android:id="@+id/button_devide"
                style="@style/Widget.MaterialComponents.ExtendedFloatingActionButton"
                android:layout_width="72dp"
                android:layout_height="72dp"
                android:layout_margin="10dp"
                android:text="/"
                android:textColor="@color/white"
                android:backgroundTint="#46C84B"
                android:textSize="30dp"
                app:cornerRadius="50dp"
                />

        </LinearLayout>
    </LinearLayout>




</RelativeLayout>